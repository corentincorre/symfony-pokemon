{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block stylesheets %}
    <link href='https://unpkg.com/css.gg@2.0.0/icons/css/pokemon.css' rel='stylesheet'>
{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #FFBD72;
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
        }

        p {
            font-family: 'Pokemon Hollow', sans-serif;
        }

        p:hover {
            font-family: 'Pokemon Solid', sans-serif;

            transition: 1s;
        }

        .header {
            background-color: #F77F6F;
            padding: 1em 0;
            box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size:22px;
            margin: 0 auto;
            width: 95%;
        }

        .header-container a {
            color: #F5F5F5;
            text-decoration: none;
            transition: 0.3s;
            padding: 0.5em 1em;
        }

        .header-container a:hover {
            color: #FCFCFC;
        }

        .header-container .profile-actions {
            display: flex;
        }


        .example-wrapper {

            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            background-color: #F5F5F5;
            border-radius: 12px;
            box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
            padding: 2em;
            position: relative;
        }

        .logout-container {
            text-align: right;
        }


        .example-wrapper a {
            display: inline-block;
            font-weight: bold;
            background-color: #FFCB05;
            color: #333;
            padding: 12px 24px;
            border-radius: 8px;
            text-decoration: none;
            box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
            transition:  0.3s;
        }

        .example-wrapper a:hover {
            background-color: #B22C2C;
            color: #FCFCFC
        }

        .example-wrapper h1 {
            font-size: 2.5em;
            font-weight: bold;
            color: #3B4CCA;
            margin-bottom: 0.5em;
        }

        .example-wrapper p.name {
            font-size: 2em;
            font-weight: bold;
            color: #B22C2C;
        }

        .pokemon-icon {

            position: absolute;
            right: 1em;
            bottom: 1em;
        }


    </style>

    <div class="header">
        <div class="header-container">
            <a href="#">Jouer</a>
            <div class="profile-actions">
                <a href="#">Voir mon profil | {{ user }}</a>
                <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        </div>
    </div>



    <div class="example-wrapper">
        <div class="logout-container">
            <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </div>
        <h1>Profil du joueur</h1>
        <p class="name">{{ user }}</p>
        <a href="{{ path('app_pokedex') }}">Mon Pokédex</a>
        <a href="{{ path('app_pokemon') }}">Mes Pokémons</a>
        <a href="{{ path('app_trade') }}">Échanger mes pokémons</a>
        <i class="gg-pokemon pokemon-icon"></i>
    </div>
{% endblock %}
