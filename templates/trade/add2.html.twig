{% extends 'base.html.twig' %}

{% block title %}Hello TradeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="header">
        <div class="header-container">
            <a href="{{ path('app_home_page') }}">Jouer</a>
            <div class="profile-actions">
                <a href="{{ path('app_account') }}">Voir mon profil | {{ user }}</a>
                <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        </div>
    </div>

    <div class="example-wrapper">
        <h1>Créer un échange avec {{ receiver }}</h1>

        <form action="{{path('app_trade_add2')}}" method="post">
            <input type="hidden" name="receiver" value="{{ receiver.getId() }}">

            <select name="pkm-sender" id="pkm-sender">
                <option value="">--Choisir un pokemon--</option>
                {% for pkm in pkmSender %}
                    <option value="{{ pkm.getId() }}">{{ pkm }}</option>
                {% endfor %}
            </select>
            <select name="pkm-receiver" id="pkm-receiver">
                <option value="">--Choisir un pokemon--</option>
                {% for pkm in pkmReceiver %}
                    <option value="{{ pkm.getId() }}">{{ pkm }}</option>
                {% endfor %}
            </select>
            <button>Créer l'échange</button>
        </form>

    </div>
{% endblock %}
